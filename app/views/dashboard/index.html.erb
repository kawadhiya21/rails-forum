<% if flash[:notice] %>
    <div class='alert alert-error'><%= flash[:notice] %></div>
<% end %>
<h1>Recent Posts</h1>
<hr>
<div class="row">
    <div class="span2">
        <h3>Categories</h3>
        <ul>
            <% @categories.each do |category| %>
                <li><%= category.name %></li>
            <% end %>
        </ul>
    </div>
    <div class="span7">
        <center><h3>Posts</h3></center>
        <table class="table table-striped table-bordered">
            <thead>
                <th>Posted By</th>
                <th>Category</th>
                <th>List</th>
            </thead>
            <tbody>
        <% @posts.each_with_index do |post, i| %>
            <tr>
                <td><%= post.user.profile.name %></td>
                <td><%= post.category.name %></td>
                <td><%= post.topic %></td>
            </tr>       
        <% end %>
           </tbody>
        </table>
    </div>
</div>